{
  "version": 2,
  "builds": [
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "flutter pub get",
        "buildCommand": "chmod +x build.sh && ./build.sh",
        "outputDirectory": "build/web"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
